<body>
   <%- include('../includes/navigation.ejs') %>
<div class="container">
    <h1>ADD PRODUCT</h1>
    <main>
        <form class="product-form" action="/admin/edit-product" method="post">
            <div class="form-control" id="background">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="title" id="title" value="<% if (editing) { %><%= product.title %><% } %>">
                </div>
                  <div class="mb-3">
                    <label for="title" class="form-label">Image URL</label>
                    <input type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= product.imageUrl %><% } %>">
                </div>
                <div class="mb-3">
                    <label for="title" class="form-label">Price</label>
                    <!-- <input type="number" class="form-control"  name="price" id="price" step="0.01" value="<% if(editing) { %> <%= product.price %> <% } %>"> -->
                    <input type="number" name="price" id="price" step="0.01" value="<% if (editing) { %><%= product.price %><% } %>">

                </div>
                <div class="mb-3">
                    <label for="title" class="form-label">Description</label>
                    <textarea name="description" id="description" rows="5"><% if (editing) { %><%= product.description %><% } %></textarea>
                </div>                 
            </div><br>
            <% if (editing) { %>
                <input type="hidden" value="<%= product._id %>" name="productId">
            <% } %>

            <button type="submit" class="btn btn-outline-primary"> <% if(editing) { %> Update Product <% } else { %> Add Product <% } %> </button>
        </form>
    </main>
</div>
<%- include('../includes/end.ejs') %>
